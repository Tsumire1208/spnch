<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      &emsp;&emsp;&nbsp;&nbsp;<img src="<%= "/images/SPN-ch.PNG "%>", style= "width: 45%; height: 45%; border-radius: 10%; border: 5px solid #ccc;" role="img">
      <h1>Log in</h1>
      <h4>登録ユーザーでログイン</h4>
      <%= render "devise/shared/links"%>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true do |f|%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email, placeholder:"PC・携帯どちらでも可", autofocus: true%>
          </div>
          <div class='field'>
            <div class='field-label'>
              <%= f.label :password%>
              <i>(英数字6文字以上)</i>
            </div>
            <div class='field-input'>
              <%= f.password_field :password, placeholder:"6文字以上の半角英数字", autocomplete: "off"%>
            </div>
          </div>
          <div class='actions'>
            <%= f.submit "Log in", class: 'btn'%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
